@model RequiredItemViewModel

@{
    ViewData["Title"] = "AddNeededItem";
}
<div class="container-fluid d-flex tender-parent  mt-10">
    <div class="text-center tender">
    <h1 class="tender-header">Enter Required Items </h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="AddNeededItem">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group ">
                        <input asp-for="TID" type="hidden" value="@Model.TID" />
                        <span asp-validation-for="TID" class="text-danger error"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="Name" class="control-label error"></label>
                        <input asp-for="Name" class="form-control" placeholder="Record New Item" />
                        <span asp-validation-for="Name" class="text-danger error"></span>
                    </div>
                    <br />
                    <div class="form-group d-grid gap-2 space">
                        <input type="submit" value="Add ITem" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <br />
        <div class="form-group d-flex justify-content-end">
            <a onclick="if(!confirm('are you sure u want to Cansel This Proccess !? ...')){return false}" class="btn btn-danger m-1" asp-action="Delete" asp-controller="Tender">Cancel</a>
            <a asp-action="index" asp-controller="Home" class="btn btn-primary m-1"> OK </a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
