@model CommitteeSLCViewModel

@{
    ViewData["Title"] = "SelectSLCCommitteemembers";
}

<div class="container-fluid d-flex tender-parent  mt-10">
    <div class="text-center tender">
        <h1 class="tender-header">Determin Committees Members</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="SelectSLCCommitteemembers" asp-route-id="@Model.TID">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <div class="form-group ">
                            <input asp-for="TID" type="hidden" value="@Model.TID" />
                            <span asp-validation-for="TID" class="text-danger error"></span>
                        </div>
                        <label asp-for="SelectSLCMembers" class="form-label error"></label>
                        <select multiple="" asp-for="SelectSLCMembers" class="form-select error" asp-items="Model.Memebers"
                                data-placeholder="Select Specification and Price members">
                            <option></option>
                        </select>
                        <span asp-validation-for="SelectSLCMembers" class="text-danger error"></span>
                    </div>
                    <br />
                    <div class="form-group d-flex justify-content-end ">
                        <a asp-action="" asp-controller="" class="btn btn-primary m-1">Cancel</a>
                        <input type="submit" value="Okay" class="btn btn-primary m-1" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
