@model IEnumerable<Vendor>

@{
    ViewData["Title"] = "Index";
}

@{
    int rowIndex = 0;
}

@if (Model != null && Model.Any())
{
    <div class="container-fluid tender-parent text-center  mt-10">
        <partial name="SearchPartionView" />
        <h1 class="tender-header">
            <i class="fa-solid fa-arrow-right"></i>
            All Vendors
        </h1>
        <div class="form-group d-flex justify-content-end mb-2">
            <a asp-action="Add" asp-controller="Vendor" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add new Vendor
            </a>
        </div>
        <div class="tenderTable container">
            <div class="row text-center">
                <div class="col-md-12">
                    <table class="table table-bordered" cellspacing="0" cellpadding="0">
                        <thead>
                            <tr class="table-pramiry tender-table">
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.number)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(rowIndex % 2 == 0 ?   "odd-table" : "even-table")">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.number)
                                    </td>
                                    <td class="d-flex justify-content-end">
                                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-success mx-2"><i class="bi bi-pen"></i></a> |
                                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                                    </td>
                                </tr>
                                rowIndex++;
                            }
                        </tbody>
                    </table>
                    <div class="form-group d-flex justify-content-end ">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Main Padge</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <partial name="NotDataFoundPartialView" />
}

