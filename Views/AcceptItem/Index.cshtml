@model IEnumerable<Offer>

@{
    ViewData["Title"] = "Index";
}

@if (Model != null && Model.Any())
{
    <div class="container-fluid tender-parent text-center  mt-10">
        <h1 class="tender-header space"><i class="fa-solid fa-arrow-right"></i>The Accept Items</h1>
        <div class="tenderTable container">
            <div class="row text-center">
                <div class="col-md-12">
                    <table class="table table-bordered" cellspacing="0" cellpadding="0">
                        <thead>
                            <tr class="table-pramiry tender-table">
                                <th>Name</th>
                                <th>Type</th>
                                <th>Desc</th>
                                <th>OfferID</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            @foreach (var i in item.alternativeItems)
                            {
                                if (i.IsAccept == true)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@i.Name</td>
                                            <td>@i.Type</td>
                                            <td>@i.Description</td>
                                            <td>@i.OfferId</td>
                                        </tr>
                                    </tbody>
                                }
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <partial name="NotDataFoundPartialView" />
}
