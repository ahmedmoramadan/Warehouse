@model AddVendorViewModel

@{
    ViewData["Title"] = "Add";
}

<div class="container-fluid d-flex tender-parent  mt-10">
    <div class="text-center tender">
        <h1 class="tender-header">Add New Vendor</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label error"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Title" />
                        <span asp-validation-for="Name" class="text-danger error"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="number" class="control-label error"></label>
                        <input asp-for="number" class="form-control" placeholder="Enter Title" />
                        <span asp-validation-for="number" class="text-danger error"></span>
                    </div>
                    <br />
                    <div class="form-group d-flex justify-content-end">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-danger mx-2" >Cancel</a>
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

