@model SpecificationNeededItemViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid d-flex tender-parent  mt-10">
    <div class="text-center tender">
        <h1 class="tender-header">  <i class="fa-solid fa-arrow-right"></i> Determine Specification and Price For each Item</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit" asp-controller="RequiredItem" asp-route-id="@Model.id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <br />
                    <div class="form-group">
                        <input asp-for="TId" class="form-control" hidden />
                        <span asp-validation-for="TId" class="text-danger error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label error"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger error"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Description" class="control-label error"></label>
                        <input asp-for="Description" class="form-control" placeholder="Description" />
                        <span asp-validation-for="Description" class="text-danger error"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Type" class="control-label error"></label>
                        <input asp-for="Type" class="form-control" placeholder="TYPE" />
                        <span asp-validation-for="Type" class="text-danger error"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="InitialPrice" class="control-label error"></label>
                        <input asp-for="InitialPrice" class="form-control" />
                        <span asp-validation-for="InitialPrice" class="text-danger error"></span>
                    </div>
                    <div class="form-group d-flex justify-content-end space">
                        <a asp-action="index" class="btn btn-danger mx-2">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/pricevalidtion.js"></script>
}
