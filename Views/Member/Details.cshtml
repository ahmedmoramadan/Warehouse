@model Member

@{
    ViewData["Title"] = "Details";
}
@{
  int  rowIndex = 0;
}
@if(Model.CovenantItems.Any()){
<div class="container-fluid tender-parent text-center  mt-10">
    <h1 class="tender-header">
         <i class="fa-solid fa-arrow-right"></i>
         Covenant for :@Model.Name </h1>
        <div class="tenderTable container">
        <div class="row text-center">
            <div class="col-md-12">
                <table class="table table-bordered" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr class="table-pramiry tender-table">
                            <th></th>
                            <th>Item Name</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CovenantItems)
                        {
                            rowIndex++;
                            <tr class="@(rowIndex % 2 == 0 ?   "even-table" : "odd-table" )">
                                <td>@rowIndex</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>@item.Quantity</td>
                                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="CovenantItem" asp-route-id="@item.Id" asp-route-MemberId ="@Model.Id">Expire</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
           @*  <div class="form-group d-flex justify-content-end ">
                <a asp-action="" asp-controller="" class="btn btn-primary">Main Page</a>
            </div> *@
        </div>
    </div>
    </div>
}
else
{
    <div class="container-fluid d-flex .warning text-center  ">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12">
                    <div class="alert alert-dismissible alert-warning SpaceWarning">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <h4 class="alert-heading">Warning!</h4>
                        <p style="direction:rtl"> @Model.Name not have Covanant </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}